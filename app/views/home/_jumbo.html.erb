<div class="jumbotron center">
    <h1>Welcome to Pinterested!</h1>
    <p><em>A Pinterest Clone</em></p>
    
    <% if user_signed_in? %>
        <%= link_to "Log Out", destroy_user_session_path, class: 'btn btn-primary', method: :delete %>
        <%= link_to "Edit Profile", edit_user_registration_path, class: 'btn btn-default' %>
        <%= link_to "List Pins", pins_path, class: 'btn btn-default' %>
    <% else %>
        <%= link_to "Log In", new_user_session_path, class: "btn btn-default" %>
        <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-danger" %>
    <% end %>
</div>