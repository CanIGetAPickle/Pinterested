<%= render 'home/jumbo' unless user_signed_in? %>

<div id="pins" class="transitions-enabled">

  <% @pins.each do |pin| %>
    <div class="box">
      <div class="panel panel-default">
        <%= link_to image_tag(pin.image.url(:medium)), pin %><br/>
        <div class="panel-body">
          <div class="center">
            <%= pin.description %><br/>
            <strong><%= pin.user.name if pin.user %></strong><br/>
            <% if pin.user == current_user && user_sign_in? %>
          </div>
        </div>
        <div class="panel-footer">
          <div class="center">
            <%= link_to 'Edit', edit_pin_path(pin) %> | 
            <%= link_to 'Delete', pin, method: :delete, data: { confirm: 'Are you sure?' } %><br/>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  <% end %>
  
</div>

<div class="center">
  <%= will_paginate @pins, renderer: BootstrapPagination::Rails %>
</div>